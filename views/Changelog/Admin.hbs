            <script>
                $.trumbowyg.svgPath = '/images/trumbowyg.svg';
                $('#CreateChangelog').trumbowyg({
                    btns: [
                        ['viewHTML'],
                        ['undo', 'redo'],
                        ['formatting'],
                        ['strong', 'em', 'del', 'underline'],
                        ['highlight'],
                        ['link'],
                        ['image'],
                        ['justifyLeft', 'justifyCenter', 'justifyRight', 'justifyFull'],
                        ['unorderedList', 'orderedList'],
                        ['foreColor', 'backColor'],
                        ['preformatted'],
                        ['horizontalRule'],
                        ['fullscreen']
                    ],
                    autogrow: true,
                    autogrowOnEnter: true
                });

                function createChangelog() {
                    const Data = $('#CreateChangelog').trumbowyg('html');
                    const Category = $("#Category option:selected").text();
                    const Name = $("#Name").val();
                    const Time = $("#Time").val();

                    $.ajax({
                        async: true,
                        type: 'POST',
                        url: '/Changelog/Admin',
                        data: {
                            Category: Category,
                            Name: Name,
                            Time: Time,
                            Data: Data
                        },
                        success: function(data) {
                            if (data.Error !== undefined) {console.log(data.Error); return alert(data.Error);}
                            else return alert(data);
                        },
                        error: function(error) {
                            console.log(error)
                            return alert("Error");
                        }
                    });
                }
            </script>
